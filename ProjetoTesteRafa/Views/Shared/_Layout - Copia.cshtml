<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title  | gerente ProjetoTesteRafa</title>
    <link href="@Url.Content("~/Content/AdminLTE/adminlte.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Plugins/fontawesome-free/css/all.min.css")" rel="stylesheet" />

    @*Adicionado abaixo para utilizar o css "próprio" sem fazer modificações ao css do template*@
    <link href="@Url.Content("~/Content/Suricss.css")" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-tranProjetoTesteRafaion sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_NavBar")
        @Html.Partial("_SideBar")
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Título</h5>
                <p>Conteúdo da Sidebar</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Qualquer Descrição
            </div>
            <!-- Default to the left -->
            <strong>@DateTime.Now.Year - Projeto Teste Rafa</strong>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Scripts/AdminLTE/adminlte.min.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

